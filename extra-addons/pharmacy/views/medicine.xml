<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_medicine_tree" model="ir.ui.view">
            <field name="name">medicine.tree</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <tree string="Medicines">
                    <field name="name" string="Medicine Name"/>
                    <field name="forme" string="Medicine Forme"/>
                    <field name="composition" string="Medicine Composition"/>
                    <field name="dosage" string="Medicine Dosage" />
                    <field name="unit_dosage" string="Medicine Unit" />
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_medicine_form" model="ir.ui.view">
            <field name="name">medicine.form</field>
            <field name="model">pharmacy.medicine</field>
            <field name="arch" type="xml">
                <form string="Medicine">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="forme"/>
                            <field name="presentation"/>
                            <field name="composition"/>
                            <field name="dosage"/>
                            <field name="unit_dosage"/>
                            <field name="images" widget="image" options="{'image_index': 0, 'size': [128, 128]}"/>
                        </group>
                        <group string="Stocks">
                            <field name="stocks" readonly="1">
                                <tree string="Stocks">
                                    <field name="pharmacy_id" string="Pharmacy"/>
                                    <field name="price" string="Price"/>
                                    <field name="quantity" string="Quantity"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="medicine_action_form" model="ir.actions.act_window">
            <field name="name">Medicine</field>
            <field name="res_model">pharmacy.medicine</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Wizard Form View -->
        <record id="view_import_medicine_form" model="ir.ui.view">
            <field name="name">import.medicine.wizard.form</field>
            <field name="model">import.medicine.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Medicines">
                    <sheet>
                        <group>
                            <field name="file" widget="binary" filename="file_name"/>
                            <field name="file_name"/>
                        </group>
                        <footer>
                            <button string="Import" type="object" name="import_medicines" class="btn-primary"/>
                            <button string="Discard" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <record id="action_import_medicine" model="ir.actions.act_window">
            <field name="name">Import Medicines</field>
            <field name="res_model">import.medicine.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu -->
        <menuitem id="main_menu" name="Pharmacy"/>
        <menuitem id="menu_medicine" name="Medicine" parent="main_menu"/>
        <menuitem id="menu_view_medicine" name="View Medicines" parent="menu_medicine" action="medicine_action_form"/>
        <menuitem id="menu_import_medicine" name="Import Medicines" parent="menu_medicine" action="action_import_medicine"/>
    </data>
</odoo>
