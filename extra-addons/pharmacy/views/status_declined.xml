<odoo>
    <data>
        <template id="status_declined" name="Declined Status">
            <head>
                <link rel="stylesheet" type="text/css" href="/pharmacy/static/css/tailwind.css"/>
            </head>
            <body class="bg-red-100 flex items-center justify-center h-screen">
                <div class="bg-white p-6 rounded shadow-md max-w-lg text-center">
                    <h1 class="text-2xl font-bold text-red-600 mb-4">Status: Declined</h1>
                    <p class="text-gray-700 mb-6">Your pharmacy has been declined due to missing or incorrect information. This account will be deleted automatic after you log out, please try another time.</p>
                    <form action="/owner/owner_delete" method="post" class="inline">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Logout</button>
                     </form>
                </div>
            </body>
        </template>
    </data>
</odoo>
