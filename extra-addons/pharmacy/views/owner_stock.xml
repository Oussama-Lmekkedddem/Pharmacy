<odoo>
    <data>
        <template id="owner_stock" name="Stock Management">
            <t t-call="pharmacy.owner_layout">
                <div class="container mx-auto mt-10 p-4">
                    <h1 class="text-2xl font-bold mb-4">Stock Management</h1>
                    <p class="text-gray-700 mb-6">Manage the stock for your pharmacy below.</p>

                    <!-- Form to Add/Update Stock -->
                    <form action="/owner/manage_stock" method="post" class="mb-8 bg-gray-50 p-6 rounded shadow">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                        <input type="hidden" name="stock_id" t-att-value="form_data.get('stock_id') if form_data else ''" />

                        <div class="mb-4">
                            <label for="medicine_id" class="block text-sm font-medium text-gray-700 mb-1">Medicine</label>
                            <select name="medicine_id" id="medicine_id" class="block w-full border-gray-300 rounded shadow-sm focus:ring-blue-500 focus:border-blue-500" required="required">
                                <option value="">Select a Medicine</option>
                                <t t-foreach="medicines" t-as="medicine">
                                    <option t-att-value="medicine.id" t-att-selected="'selected' if form_data and form_data.get('medicine_id') == medicine.id else ''" t-esc="medicine.name" />
                                </t>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price</label>
                            <input type="number" name="price" id="price" class="block w-full border-gray-300 rounded shadow-sm focus:ring-blue-500 focus:border-blue-500" t-att-value="form_data.get('price') if form_data else ''" min="0.01" step="0.01" required="required"/>
                        </div>

                        <div class="mb-4">
                            <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">Quantity</label>
                            <input type="number" name="quantity" id="quantity" class="block w-full border-gray-300 rounded shadow-sm focus:ring-blue-500 focus:border-blue-500" t-att-value="form_data.get('quantity') if form_data else ''" min="1" required="required"/>
                        </div>

                        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded">Save Stock</button>
                    </form>

                    <!-- Display Existing Stocks -->
                    <h2 class="text-xl font-semibold mb-4">Existing Stocks</h2>
                    <table class="w-full table-auto border border-gray-300 rounded shadow">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Medicine</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Price</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Quantity</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white">
                            <t t-foreach="stocks" t-as="stock">
                                <tr class="border-b">
                                    <td class="px-4 py-2 text-gray-700" t-esc="stock.medicine_id.name" />
                                    <td class="px-4 py-2 text-gray-700" t-esc="stock.price" />
                                    <td class="px-4 py-2 text-gray-700" t-esc="stock.quantity" />
                                    <td class="px-4 py-2">
                                        <form action="/owner/manage_stock" method="get" class="inline-block">
                                            <input type="hidden" name="stock_id" t-att-value="stock.id" />
                                            <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-1 px-3 rounded">Edit</button>
                                        </form>
                                        <form action="/owner/delete_stock" method="post" class="inline-block">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                            <input type="hidden" name="stock_id" t-att-value="stock.id" />
                                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-medium py-1 px-3 rounded">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
    </data>
</odoo>
