<odoo>
    <data>
        <template id="owner_reservation" name="Reservation Management">
            <t t-call="pharmacy.owner_layout">
                <div class="container mx-auto mt-10 p-4 h-screen">
                    <h1 class="text-2xl font-bold mb-4">Reservation Management</h1>
                    <p class="text-gray-700 mb-6">Manage reservations for your pharmacy below.</p>

                    <!-- Display Existing Reservations -->
                    <table class="w-full table-auto border border-gray-300 rounded shadow">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Client</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Medicine</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Quantity</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-800">Message</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Total Price</th>
                                <th class="px-4 py-2 text-left text-sm font-medium text-gray-500">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white">
                            <t t-foreach="reservations" t-as="reservation">
                                <tr class="border-b">
                                    <td class="px-4 py-2 text-gray-700" t-esc="reservation.client_id.name" />
                                    <td class="px-4 py-2 text-gray-700" t-esc="reservation.stock_id.medicine_id.name" />
                                     <td class="px-4 py-2 text-gray-700" t-esc="reservation.quantity" />
                                    <td class="px-4 py-2 text-gray-700" t-esc="reservation.message" />
                                    <td class="px-4 py-2 text-gray-700" t-esc="reservation.price" />
                                    <td class="px-4 py-2">
                                        <!-- Cancel Button -->
                                        <form action="/owner/cancel_reservation" method="post" class="inline-block">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                            <input type="hidden" name="reservation_id" t-att-value="reservation.id" />
                                            <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-medium py-1 px-3 rounded">Cancel</button>
                                        </form>
                                        <!-- Finalize Button -->
                                        <form action="/owner/finalize_reservation" method="post" class="inline-block">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                            <input type="hidden" name="reservation_id" t-att-value="reservation.id" />
                                            <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-medium py-1 px-3 rounded">Finalize</button>
                                        </form>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>
    </data>
</odoo>
